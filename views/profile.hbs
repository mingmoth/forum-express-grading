<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Email:</strong> {{user.email}}</li>
      </ul>
    </div>
    {{#ifCond user.id userId}}
    <a href='/users/{{user.id}}/edit' >
      Edit
    </a>
    {{/ifCond}}
  </div>
  <hr>
</div>