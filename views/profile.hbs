<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Email:</strong> {{user.email}}</li>
      </ul>
      <ul class="list-unstyled">
        <li><strong>{{user.Comments.length}}</strong> 則評論</li>
      </ul>
    </div>
    {{#ifCond user.id userId}}
    <a href='/users/{{user.id}}/edit' >
      Edit
    </a>
    {{/ifCond}}
  </div>
  <hr>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header"><strong>{{user.Comments.length}}</strong> 則評論</div>
      <div class="card-body d-flex">
        {{#each user.Comments}}
        <a href="/restaurants/{{this.RestaurantId}}" class="p-2">
          <img class="img-responsive center-block" src="{{this.Restaurant.image}}" style="width: 50px;height: 50px; object-fit: cover;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>